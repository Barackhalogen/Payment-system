{
  "ts-node": {
    "esm": true,
    "experimentalSpecifier": true
  },
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "jsx": "react-jsx",

    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["src/*"],
      "@emails/*": ["emails/*"]
    }
  },
  "include": ["src", "emails"],
  "exclude": ["node_modules", "dist"]
}
